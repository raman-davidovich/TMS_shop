{
  "compilerOptions": {
    "target": "ESNext",
    "strict": true,
    "incremental": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@styles/*": ["./src/styles/*"],
      "@assets/*": ["./src/assets/*"]
    },
    "types": ["vue"],
    "allowSyntheticDefaultImports": true
  },
  "references": [{ "path": "./tsconfig.node.json" }, { "path": "./tsconfig.app.json" }],
  "include": ["src/**/*"]
}
